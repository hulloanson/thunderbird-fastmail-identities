{
    "manifest_version": 2,
    "name": "Fastmail Identities",
    "description": "An extension to automatically import Fastmail email identities",
    "version": "1.0",
    "author": "Thunderbird Team",
    "browser_specific_settings": {
        "gecko": {
            "id": "thunderbird@hulloanson.com",
            "strict_min_version": "78.0"
        }
    },
    "browser_action": {
        "default_popup": "mainPopup/popup.html",
        "default_title": "Fastmail Identities"
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "accountsRead",
        "accountsIdentities",
        "storage",
        "menus",
        "notifications"
    ]
}